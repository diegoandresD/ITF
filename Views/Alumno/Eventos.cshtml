
@{
    ViewBag.Title = "Eventos";
}
<link href="~/plugins/datetimepicker/bootstrap-datetimepicker.css" rel="stylesheet" />
<link href="~/plugins/noty/lib/noty.css" rel="stylesheet" />
<link href="~/plugins/noty/lib/themes/relax.css" rel="stylesheet" />
<link href="~/plugins/noty/lib/themes/sunset.css" rel="stylesheet" />
<link href="~/plugins/swal/sweetalert2.css" rel="stylesheet" />

<div class="alrazy-title title-Alumno" data-splitting>Eventos</div>
<script src="https://unpkg.com/splitting@1.0.0/dist/splitting.js"></script>
<script>Splitting();</script>
<br />

<div class="container body-content">
    <div class="container">
        <div class="row portafolio" id="ContenidoEventos" style="border-bottom: 5px solid #22bb33;">





        </div>

    </div>
    <br />
</div>

<div class="modal fade" id="ModalEventoInscripcion" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Creando Evento <label style="font-weight:bold" id="AlumnoNombre"></label></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-12 col-md-12 col-lg-12 mt-4">
                            <div class="card">
                                <div class="card-body">
                                    <img class="card-img-top" id="UrlImagenEvento" style="height: 400px;" src="#">
                                    <div class="card-block">
                                        @*<figure class="profile">
                                                <img src="#" id="UrlImagenEvento" class="profile-avatar" alt="">
                                            </figure>*@
                                        <h2 class="card-title mt-3" id="TituloEvento"></h2>
                                        <h5 class="card-title mt-3" id="DescripcionCortaEvento"></h5>
                                        <h5 class="card-title mt-3" id="DescripcionDetalladaEvento"></h5>
                                        <div class="meta">
                                            <a class="text-primary">
                                                Fecha evento: <label id="FechaEvento"></label>
                                            </a>
                                        </div>

                                        <div class="card-text">
                                            Valor: <label id="ValorEvento"></label>
                                        </div>
                                        <div class="card-text">
                                            Lugar: <label id="UbicaciónEvento"></label>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <small class="text-primary">Evento subido <label id="FechaSubidaEvento"></label></small>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>

            </div>
            <div class="modal-footer">
                <button id="ButtonInscribir" class="btn btn-success float-right">Inscribirse | <i class="fas fa-user-plus"></i></button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/plugins/noty/lib/bounce.min.js"></script>
    <script src="~/plugins/swal/sweetalert2.min.js"></script>
    <script src="~/plugins/swal/sweetalert2.init.js"></script>
    <script src="~/plugins/noty/lib/noty.js"></script>

    <script src="~/js/Alumno/Eventos.js"></script>
}

