
@{
    ViewBag.Title = "Ahorros";
}


<div class="alrazy-title title-Alumno" data-splitting>Mi Cartera</div>
<script src="https://unpkg.com/splitting@1.0.0/dist/splitting.js"></script>
<script>Splitting();</script>
<br />
<div class="container">
    <table id="Saldo" class="table table-hover table-bordered text-center">
        <thead>

            <tr>
                <th class="text-success" colspan="5">Cuentas</th>
            </tr>
            <tr>
                <th style="width:10%">Tipo cuenta</th>
                <th style="width:10%">N° Cuenta</th>
                <th style="width:8%">Moneda</th>
                <th style="width:22%" class="text-center">Saldo disponible CLP</th>
                <th style="width:10%"></th>
            </tr>
        </thead>
        <tbody id="tbodyCartera">
            
        </tbody>


    </table>
    <table id="Movimiento" class="table table-hover table-bordered text-center">
        <thead>
            <tr class="text-success">
                <th colspan="6">
                    Movimientos
                </th>
            </tr>
            <tr>
                <th>Fecha</th>
                <th>N° Operación</th>
                <th>Descripción</th>
                <th>Cargos CLP</th>
                <th>Abonos CLP</th>
                <th>Saldo CLP</th>
            </tr>
        </thead>
        <tbody id="TbodyMovimientos">

        </tbody>
    </table>
</div>

<div class="modal fade" id="ModalAddSaldo" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Transferir a tu ahorro <label style="font-weight:bold" id="AlumnoNombre"></label></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <label>Monto a transferir: </label>
                        <input type="number" id="Monto_transferir" class="form-control" />
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" id="ButtonTransferirAhorro">Tranferir</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

