<div class="modal fade" id="exampleModal1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Empeinera Roja</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <label>Nombre Vendedor</label>
                        <p><input type="text" class="form-control" /></p>
                    </div>
                    <div class="col-md-12">
                        <label>Foto</label>
                        <img class="card-img-top" src="https://artemarcial.cl/wp-content/uploads/2019/02/empeineras-taekwondo-itf.jpg" alt="Card image cap">
                    </div>
                    <div class="col-md-12">
                        <label>Marca</label>
                        <p>
                            <select class="form-control">
                                <option value="0">--Seleccione--</option>
                                <option value="1">Nike</option>
                                <option value="2">Adidas</option>
                                <option value="3">Puma</option>
                            </select>
                        </p>
                    </div>
                    <div class="col-md-12">
                        <label>Responsable de Entregar el producto:</label>
                        <p><input type="text" class="form-control" /></p>
                    </div>
                    <div class="col-md-6">
                        <label>Telefono</label>
                        <p><input type="text" class="form-control" /></p>
                    </div>
                    <div class="col-md-6">
                        <label for="txtPrecio">Precio</label>
                        <p><input type="text" class="form-control" id="txtPrecio" /></p>
                    </div>
                    <div class="col-md-12">
                        <label for="txtDireccion">Direccion</label>
                        <p><input type="text" class="form-control" id="txtDireccion" /></p>
                    </div>
                    <div class="col-md-12">
                        <label>Academia donde retirar</label>
                        <p>
                            <select class="form-control">
                                <option value="0">--Seleccione--</option>
                                <option value="1">Loyalti</option>
                                <option value="2">Escula Sabunim Martinez</option>
                                <option value="3">Escuela Walter Zambrano</option>
                            </select>
                        </p>
                    </div>

                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary">Agregar al carrito</button>
            </div>
        </div>
    </div>
</div>

