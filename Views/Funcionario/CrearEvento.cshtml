
@{
    ViewBag.Title = "CrearEvento";
}
<link href="~/plugins/datetimepicker/bootstrap-datetimepicker.css" rel="stylesheet" />
<link href="~/plugins/noty/lib/noty.css" rel="stylesheet" />
<link href="~/plugins/noty/lib/themes/relax.css" rel="stylesheet" />
<link href="~/plugins/noty/lib/themes/sunset.css" rel="stylesheet" />
<link href="~/plugins/swal/sweetalert2.css" rel="stylesheet" />
<style>
    .weafea {
        border: solid 5px red;
        padding: 50px;
    }

    /*.{
        z-index: 9090909090;
    }*/
</style>

<main>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 col-md-offset-2">
                <div class="card" style="border:1px solid red">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        Agregar Evento
                        <button id="ButtonAddEvento" type="button" title="Agregar Maestro" class="btn btn-outline-danger">
                            <i class="fas fa-plus-circle"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <br>
        <table class="table table-sm table-hover table-bordered table-responsive-lg text-center">
            <!-- responsive sirve para ajutar la tabla segun el dispositivo -->
            <thead>
                <!-- Encabezado de tabla -->
                <tr class="table bg-danger text-white">
                    <th>N°</th>
                    <th>Nombre evento</th>
                    <th>Fecha</th>
                    <th>Descripción</th>
                    <th>ubicación</th>
                    <th colspan="3">Acciones</th>
                </tr>
            </thead>
            <tbody id="TbodyEventos">
            </tbody>


        </table>
    </div>

</main>
<div class="modal fade" id="ModalAddEvento" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Creando Evento <label style="font-weight:bold" id="AlumnoNombre"></label></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row">


                        <div class="col-6">
                            <label class="row" for="name">Nombre del Evento</label>
                            <div>
                                <input id="TituloAdd" name="name" type="text" placeholder="Escribe el nombre del Evento" class="form-control input-md" required="">
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <label class="row" for="name">Fecha/Hora del Evento</label>

                            <div>
                                <input type="text" class="form-control" id="FechaEvento">
                            </div>
                        </div>




                        <div class="col-6">
                            <label class="row" for="ValorEvento">Valor del Evento</label>
                            <div>
                                <input id="ValorEvento" name="valor" type="text" placeholder="Escribe el valor del Evento" class="form-control input-md" required="">
                            </div>
                        </div>



                        <div class="col-6">
                            <label for="country">Ubicación</label>
                            <div>
                                <input type="text" class="form-control" id="UbicacionEventoAdd" />
                            </div>
                        </div>



                        <div class="col-lg-6 col-md-6 col-sm-6" style="padding-bottom: 10px;">
                            <label class="row" for="name">Agrega una imagen</label>
                            <input id="FileEventoAdd" type="file" />
                        </div>

                        <div class="col-lg-12 col-md-12 col-sm-12" style="padding-bottom: 10px;">
                            <label class="row" for="name">Descripción corta</label>
                            <textarea id="DescripcionCortaAdd" class="form-control"></textarea>
                        </div>

                        <div class="col-lg-12 col-md-12 col-sm-12" style="padding-bottom: 10px;">
                            <label class="row" for="name">Descripción detallada</label>
                            <textarea id="DescripcionDetalladaAdd" class="form-control"></textarea>
                        </div>
                    </div>


                </div>

            </div>
            <div class="modal-footer">
                <button id="GuardarEvento" name="submit" class="btn btn-danger">Publicar</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/plugins/noty/lib/bounce.min.js"></script>
    <script src="~/plugins/swal/sweetalert2.min.js"></script>
    <script src="~/plugins/swal/sweetalert2.init.js"></script>
    <script src="~/plugins/noty/lib/noty.js"></script>

    <script src="~/js/Funcionario/CrearEvento.js"></script>

}

