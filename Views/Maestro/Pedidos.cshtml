
@{
    ViewBag.Title = "Pedidos";
}
<link href="~/plugins/noty/lib/noty.css" rel="stylesheet" />
<link href="~/plugins/noty/lib/themes/relax.css" rel="stylesheet" />
<link href="~/plugins/noty/lib/themes/sunset.css" rel="stylesheet" />
<link href="~/plugins/swal/sweetalert2.css" rel="stylesheet" />

<div class="alrazy-title title-maestro" data-splitting>
    Pedidos
</div>
<script src="https://unpkg.com/splitting@1.0.0/dist/splitting.js"></script>
<script>Splitting();</script>
<br />


<div>
    <div class="row">
        <table class="table table-sm table-hover table-bordered table-responsive-lg text-center">
            <!-- responsive sirve para ajutar la tabla segun el dispositivo -->
            <thead>
                <!-- Encabezado de tabla -->
                <tr class="table bg-primary text-white">
                    <th>Id pedido</th>
                    <th>Cliente</th>
                    <th>Fecha</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody id="TbodyPedidos">
            </tbody>




        </table>
    </div>
    <div class="text-center" style="margin-bottom:50px">

    </div>



</div>

<div class="modal fade" id="DetallePedido" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Detalle pedido <label style="font-weight:bold" id="AlumnoNombre"></label></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <table class="table table-sm table-hover table-bordered table-responsive-lg text-center">
                        <!-- responsive sirve para ajutar la tabla segun el dispositivo -->
                        <thead>
                            <!-- Encabezado de tabla -->
                            <tr class="table bg-primary text-white">
                                <th>Código producto</th>
                                <th>Nombre producto</th>
                                <th>Imágen</th>
                                <th>Cantidad</th>
                                <th>Precio</th>
                                <th>Subtotal</th>
                            </tr>
                        </thead>
                        <tbody id="TbodyDetallePedido">
                        </tbody>



                    </table>
                </div>

            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" id="ButtonEntregaPedido">Pedido Entregado</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>
<script src="~/plugins/noty/lib/bounce.min.js"></script>
<script src="~/plugins/swal/sweetalert2.min.js"></script>
<script src="~/plugins/swal/sweetalert2.init.js"></script>
<script src="~/plugins/noty/lib/noty.js"></script>

<script src="~/js/Maestro/Pedidos.js"></script>