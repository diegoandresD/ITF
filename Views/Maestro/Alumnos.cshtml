<div class="modal fade" id="DatosPersonal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Datos técnicos <label style="font-weight:bold" id="AlumnoNombreTecnico"></label></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <label>Grado: </label>
                        <select class="form-control" id="Grado">
                            <option value="0">--Seleccione--</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label>Peso: </label>
                        <input id="Peso" type="text" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label>Estatura: </label>
                        <input id="Estatura" type="text" class="form-control" />
