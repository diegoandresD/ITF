            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <label>Rut</label>
                        <p><input id="RutVer" type="text" class="form-control" /></p>
                    </div>
                    <div class="col-md-6"></div>
                    <div class="col-md-6">
                        <label>Nombres</label>
                        <p><input id="NombresVer" type="text" class="form-control" /></p>
                    </div>
                    <div class="col-md-6">
                        <label>Apellido paterno</label>
                        <p><input id="PaternoVer" type="text" class="form-control" /></p>
                    </div>
                    <div class="col-md-6">
                        <label>Apellido materno</label>
                        <p><input id="MaternoVer" type="text" class="form-control" /></p>
                    </div>
