
@{
    ViewBag.Title = "Alumnos";
}

<link href="~/plugins/noty/lib/noty.css" rel="stylesheet" />
<link href="~/plugins/noty/lib/themes/relax.css" rel="stylesheet" />
<link href="~/plugins/noty/lib/themes/sunset.css" rel="stylesheet" />
<link href="~/plugins/swal/sweetalert2.css" rel="stylesheet" />


<div class="container">


    <div class="alrazy-title title-maestro" data-splitting>
        Mi lista de alumnos
    </div>
    <script src="https://unpkg.com/splitting@1.0.0/dist/splitting.js"></script>
    <script>Splitting();</script>
    <br />


    <div class="row justify-content-center">

        <div class="col-md-6 col-md-offset-2">
            <div class="card">
                <div class="card-body d-flex justify-content-between align-items-center">
                    Agregar alumno
                    <button type="button" title="Agregar Alumno" class="btn btn-outline-primary" data-toggle="modal" data-target="#exampleModal">
                        <i class="fas fa-plus-circle"></i>
                    </button>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-md-offset-2">
            <div class="card">
                <div class="card-body d-flex justify-content-between align-items-center">
                    Comprobar alumno
                    <input type="text" id="RutComprobar" />
                    <button type="button" id="AbrirComprobacion" title="Comprobar Alumno" class="btn btn-outline-primary">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <br />
</div>


<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Agregar alumno</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <label>Rut</label>
                        <p><input id="AddRut" type="text" class="form-control" /></p>
                    </div>
                    <div class="col-md-6"></div>
                    <div class="col-md-6">
                        <label>Nombres</label>
                        <p><input id="AddNombres" type="text" class="form-control" /></p>
                    </div>
                    <div class="col-md-6">
                        <label>Apellido paterno</label>
                        <p><input id="AddPaterno" type="text" class="form-control" /></p>
                    </div>
                    <div class="col-md-6">
                        <label>Apellido materno</label>
                        <p><input id="AddMaterno" type="text" class="form-control" /></p>
                    </div>
                    <div class="col-md-6">
                        <label>Fecha nacimiento</label>
                        <p><input id="AddFechaNac" type="text" class="form-control" /></p>
                    </div>
                    <div class="col-md-6">
                        <label>Genero</label>
                        <p>
                            <select id="AddGenero" class="form-control">
                                <option value="0">--Seleccione--</option>
                            </select>
                        </p>
                    </div>
                    <div class="col-md-6">
                        <label>Nombre usuario</label>
                        <p><input id="AddNombreUsuario" type="text" class="form-control" /></p>
                    </div>
                    <div class="col-md-6">
                        <label>Correo electronico</label>
                        <p><input id="AddCorreo" type="text" class="form-control" /></p>
                    </div>
                    <div class="col-md-6">
                        <label>Telefono</label>
                        <p><input id="AddTelefono" type="text" class="form-control" /></p>
                    </div>
                    <div class="col-md-6">
                        <label for="AddTelefonoContacto">Telefono contácto</label>
                        <p><input type="text" class="form-control" id="AddTelefonoContacto" /></p>
                    </div>
                    <div class="col-md-6">
                        <label for="AddDireccion">Direccion</label>
                        <p><input type="text" class="form-control" id="AddDireccion" /></p>
                    </div>
                    <div class="col-md-6">
                        <label>Academia</label>
                        <p>
                            <select id="AddAcademia" class="form-control">
                                <option value="0">--Seleccione--</option>
                            </select>
                        </p>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                <button type="button" id="AgregarAlumno" class="btn btn-primary">Agregar</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="VerAlumno" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
